{
	"name": "tree",
	"displayName": "tree",
	"description": "a tool of tree command utilized vscode gui functions",
	"version": "0.11.0",
	"license": "beerware",
	"publisher": "akiega",
	"engines": {
		"vscode": "^1.74.0"
	},
	"categories": [
		"Other"
	],
	"repository": {
		"url": "https://github.com/AkiEga/vscode-extension-tree"
	},
	"activationEvents": [
		"onStartupFinished"
	],
	"main": "./dist/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "tree.cmd",
				"title": "show tree cmd results from file tree view"
			},
			{
				"command": "tree.refreshEntry",
				"title": "Refresh",
				"icon": {
					"light": "resources/light/refresh.svg",
					"dark": "resources/dark/refresh.svg"
				}
			}
		],
		"menus": {
			"view/item/context": [
				{
					"command": "tree.cmd",
					"when": "view == fileTree",
					"group": "tree"
				}
			],
			"view/title": [
				{
					"command": "tree.refreshEntry",
					"when": "view == fileTree",
					"group": "navigation"
				}
			]
		},
		"views": {
			"explorer": [
				{
					"id": "fileTree",
					"name": "File Tree",
					"visibility": "collapsed"
				}
			]
		},
		"configuration": {
			"title": "tree view",
			"properties": {
				"tree.view-type": {
					"type": "string",
					"default": "WebViewPanel",
					"description": "Tree view type. Please select WebViewPanel or TextEditor. \n  WebViewPanel is un-editable.\n  TextEditor is editorble"
				}
			}
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run package",
		"vscode:publish": "vsce publish minor -p $(cat ./PersonalAccessToken.txt)",
		"compile": "webpack",
		"watch": "webpack --watch",
		"package": "webpack --mode production --devtool hidden-source-map",
    	"compile-tests": "tsc -p . --outDir out",
	    "watch-tests": "tsc -p . -w --outDir out",
    	"pretest": "npm run compile-tests && npm run compile && npm run lint",
	    "lint": "eslint src --ext ts",
    	"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/vscode": "^1.85.0",
		"@types/glob": "^8.1.0",
		"@types/mocha": "^10.0.1",
		"@types/node": "20.2.5",
		"@typescript-eslint/eslint-plugin": "^5.59.8",
		"@typescript-eslint/parser": "^5.59.8",
		"@types/marked": "^4.0.8",		
		"eslint": "^8.41.0",
		"glob": "^8.1.0",
		"mocha": "^10.2.0",
		"typescript": "^5.1.3",
		"ts-loader": "^9.4.3",
		"webpack": "^5.85.0",
		"webpack-cli": "^5.1.1",
		"@vscode/test-electron": "^2.3.2"
	},
	"dependencies": {
		"marked": "^4.2.5"
	}
}
